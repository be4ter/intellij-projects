<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 30.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sample.mapper.userMapper">
    <resultMap id="userResultMap" type="com.example.practice.spring.Model.UserVO">
        <result property="id" column="id"/>
        <result property="userName" column="username"/>
        <result property="passWord" column="passWord"/>
    </resultMap>

    <select id="selectUserInfoAll" resultType="hashMap">
        <![CDATA[
        SELECT id, username, password
        FROM table_user
        ]]>
    </select>

    <insert id="addUserInfo" >
    <![CDATA[
        insert into TABLE_USER(id ,username, password)
        values(#{id},#{userName}, #{password})
     ]]>
    </insert>

    <select id="findByUserNameLike" parameterType="map" resultType="hashMap">
    <![CDATA[
      SELECT
            ID,
            USERNAME,
            PASSWORD
      FROM TABLE_USER
      WHERE USERNAME LIKE '%${userName}%'
     ]]>
    </select>

    <select id="findByUserName" parameterType="map" resultMap="userResultMap">
        <![CDATA[
          SELECT
          ID,
          USERNAME,
          PASSWORD
          FROM TABLE_USER
          WHERE USERNAME = #{userName}
        ]]>
    </select>
</mapper>